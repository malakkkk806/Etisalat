<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .result-container {
            max-width: 700px;
            margin: 50px auto;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }
        .result-header {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            padding: 30px;
            text-align: center;
        }
        .result-body {
            padding: 40px;
            background: white;
        }
        .info-card {
            background: #f8f9fa;
            border-left: 4px solid #28a745;
            padding: 20px;
            border-radius: 0 8px 8px 0;
            margin-bottom: 20px;
        }
        .btn-etisalat {
            background: linear-gradient(135deg, #e60012, #ff6b35);
            border: none;
            color: white;
        }
        .btn-etisalat:hover {
            background: linear-gradient(135deg, #cc0010, #e55a2b);
            color: white;
        }
        .status-badge {
            font-size: 0.9em;
            padding: 8px 16px;
        }
        .json-output {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
            font-family: 'Courier New', monospace;
            font-size: 0.9em;
            max-height: 400px;
            overflow-y: auto;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container">
        <div class="result-container">
            <% if (success) { %>
                <div class="result-header">
                    <i class="fas fa-check-circle fa-4x mb-3"></i>
                    <h2 class="mb-0">Request Sent Successfully!</h2>
                    <p class="mb-0 opacity-75">Your payment request has been processed</p>
                </div>
            <% } else { %>
                <div class="result-header bg-danger">
                    <i class="fas fa-times-circle fa-4x mb-3"></i>
                    <h2 class="mb-0">Request Failed</h2>
                    <p class="mb-0 opacity-75">There was an error processing your request</p>
                </div>
            <% } %>
            
            <div class="result-body">
                <% if (success && result) { %>
                    <!-- Payment Information -->
                    <div class="info-card">
                        <h5 class="mb-3">
                            <i class="fas fa-info-circle me-2 text-primary"></i>Payment Request Details
                        </h5>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <strong>Amount:</strong> <%= paymentData.amount %> EGP
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Mobile Number:</strong> <%= paymentData.mobileNumber %>
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Reference:</strong> <%= paymentData.merchantReference %>
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Status:</strong> 
                                <% if (result.Success) { %>
                                    <span class="badge bg-success status-badge">
                                        <i class="fas fa-check me-1"></i>Success
                                    </span>
                                <% } else { %>
                                    <span class="badge bg-danger status-badge">
                                        <i class="fas fa-times me-1"></i>Failed
                                    </span>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- UPG Response Details -->
                    <% if (result.Success) { %>
                        <div class="info-card">
                            <h5 class="mb-3">
                                <i class="fas fa-receipt me-2 text-success"></i>Transaction Information
                            </h5>
                            <div class="row">
                                <% if (result.SystemReference) { %>
                                    <div class="col-md-6 mb-2">
                                        <strong>System Reference:</strong> <%= result.SystemReference %>
                                    </div>
                                <% } %>
                                <% if (result.TxnId) { %>
                                    <div class="col-md-6 mb-2">
                                        <strong>Transaction ID:</strong> <%= result.TxnId %>
                                    </div>
                                <% } %>
                                <% if (result.TxnDate) { %>
                                    <div class="col-md-6 mb-2">
                                        <strong>Transaction Date:</strong> <%= result.TxnDate %>
                                    </div>
                                <% } %>
                                <% if (result.Validity) { %>
                                    <div class="col-md-6 mb-2">
                                        <strong>Valid For:</strong> <%= result.Validity %> minutes
                                    </div>
                                <% } %>
                                <% if (result.ReceiverAccountNumber) { %>
                                    <div class="col-md-6 mb-2">
                                        <strong>Receiver Account:</strong> <%= result.ReceiverAccountNumber %>
                                    </div>
                                <% } %>
                                <% if (result.ReceiverScheme) { %>
                                    <div class="col-md-6 mb-2">
                                        <strong>Receiver Scheme:</strong> <%= result.ReceiverScheme %>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-mobile-alt me-2"></i>
                            <strong>Next Steps:</strong> The payment request has been sent to the customer's mobile device. 
                            They will receive a notification to approve or decline the payment.
                        </div>

                        <% if (result.ISOQR) { %>
                            <div class="info-card">
                                <h5 class="mb-3">
                                    <i class="fas fa-qrcode me-2 text-info"></i>QR Code Data
                                </h5>
                                <div class="json-output">
                                    <small><%= result.ISOQR %></small>
                                </div>
                                <small class="text-muted mt-2 d-block">
                                    This QR code can be used for alternative payment methods if needed.
                                </small>
                            </div>
                        <% } %>
                    <% } %>

                    <!-- Full API Response (for debugging) -->
                    <details class="mt-4">
                        <summary class="btn btn-outline-secondary btn-sm mb-3">
                            <i class="fas fa-code me-2"></i>View Full API Response
                        </summary>
                        <div class="json-output">
                            <pre><%= JSON.stringify(result, null, 2) %></pre>
                        </div>
                    </details>

                <% } else { %>
                    <!-- Error Information -->
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Error:</strong> The payment request could not be processed. Please try again or contact support.
                    </div>
                <% } %>

                <!-- Action Buttons -->
                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a href="/" class="btn btn-etisalat me-md-2">
                        <i class="fas fa-plus me-2"></i>New Payment Request
                    </a>
                    <button type="button" class="btn btn-outline-secondary" onclick="window.print()">
                        <i class="fas fa-print me-2"></i>Print Receipt
                    </button>
                </div>

                <div class="text-center mt-4">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        Transaction processed securely by Etisalat UPG Payment Gateway
                    </small>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-refresh status after some time (optional feature)
        <% if (typeof success !== 'undefined' && success && typeof result !== 'undefined' && result && result.SystemReference) { %>
            setTimeout(function() {
                console.log('You can implement status checking here using SystemReference: <%= result.SystemReference %>');
            }, 30000); // Check status after 30 seconds
        <% } %>

        // Copy transaction details to clipboard
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                alert('Copied to clipboard!');
            });
        }

        // Add click handlers for copyable elements
        document.addEventListener('DOMContentLoaded', function() {
            const systemRef = document.querySelector('[data-system-ref]');
            if (systemRef) {
                systemRef.style.cursor = 'pointer';
                systemRef.title = 'Click to copy';
                systemRef.addEventListener('click', function() {
                    copyToClipboard(this.textContent);
                });
            }
        });
    </script>
</body>
</html>
